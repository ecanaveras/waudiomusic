<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/buttondisabled" android:state_enabled="false" />
    <item android:drawable="@drawable/buttondefaultpressed" android:state_pressed="true" />

    <item>
        <shape>
            <corners android:radius="4dp" />
            <gradient android:angle="270" android:centerX="50%"
                android:startColor="#68d661"
                android:centerColor="#4eba5a"
                android:endColor="#256823"
                android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <size android:width="200dp" android:height="40dp" />
        </shape>
    </item>

</selector>

